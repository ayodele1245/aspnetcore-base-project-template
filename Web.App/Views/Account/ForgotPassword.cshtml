@model Web.App.Models.Account.ForgotPasswordModel;
@{
    ViewData["Title"] = "Forgot password";
    Layout = "~/Views/Shared/_MembershipLayout.cshtml";
}

<h1>Forgot Password</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <form asp-action="ForgotPassword">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Continue" class="btn btn-primary btn-block" />
            </div>
        </form>

        <div class="text-center">
            @if (Model?.IsSuccess == true)
            {
                <div class="alert alert-success" role="alert">
                    If you have registered with us, an email has been sent on your registered email id.<br />
                    Please refer to your email for further information to reset password.
                </div>
            }
            Back to
            <a asp-controller="Account" asp-action="Login" asp-area="" title="Sign in">Sign in</a>
        </div>
    </div>
    <div class="col-md-8 d-none d-lg-block">
        <img src="~/Images/forgot_password.svg" alt="login" class="img-fluid membership-img ml-5" />
    </div>
</div>