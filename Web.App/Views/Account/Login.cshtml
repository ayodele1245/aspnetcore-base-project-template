@model Web.App.Models.Account.SignInModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MembershipLayout.cshtml";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" class="form-control" />

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text" id="basic-addon2">
                            <i class="far fa-eye showPassword"></i>
                            <i class="far fa-eye-slash showPassword" style="display:none"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input class="checkbox" asp-for="StaySignIn" /> @Html.DisplayNameFor(model => model.StaySignIn)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn btn-primary btn-block" />
            </div>
        </form>
        <div class="text-center">
            <a asp-controller="Account" asp-action="ForgotPassword" asp-area="" title="Forgot password?">Forgot password?</a>
            <hr />
            <span>OR</span><br />
            New member?
            <a asp-controller="Account" asp-action="Signup" asp-area="" class="" title="Create an account">Create an account</a>
        </div>
    </div>
    <div class="col-md-8 d-none d-lg-block">
        <img src="~/Images/login_1.svg" alt="login" class="img-fluid membership-img ml-5"  />
    </div>
</div>

@section Scripts{

    <script>
        $(".input-group-append").click(function () {
            $(".showPassword").toggle();
            var pwd = document.getElementById("Password");
            if (pwd.getAttribute('type') === 'password') {
                pwd.setAttribute('type', 'text')
            } else {
                pwd.setAttribute('type', 'password')
            }
        });
    </script>
}